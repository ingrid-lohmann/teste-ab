{
  "compilerOptions": {
    "jsx": "react-jsx", // Essencial para projetos React
    "baseUrl": "./src", // Define 'src' como a base para importações absolutas
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "bundler", // Ou "node" para versões mais antigas do Node/configurações de bundler
    "allowSyntheticDefaultImports": true,
    "paths": {
      "@/*": ["./*"] // Permite importações relativas a src, ex: import { Component } from 'components/Component'
    },
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "isolatedModules": true, // Importante para Vite e bundlers modernos
    "esModuleInterop": true // Ajuda com importações de módulos CommonJS
  },
  "include": ["src/**/*.js", "src/**/*.jsx", "src/**/*.ts", "src/**/*.tsx"],
  "exclude": ["node_modules", "dist"]
}